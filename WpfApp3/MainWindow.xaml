<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="btn1" Height="30" Width="100" Content="Hello World" Click="Button_Click" Margin="10,10,682,65"></Button>
        <Button Name="Button1" Grid.Row="0" Width="150" Height="30" Visibility="Hidden"></Button>
        <Button Name="Button2" Grid.Row="1" Width="150" Height="30" Visibility="Visible" Content = "HAHAHAHAHAHAHAHAHAHA" FontFamily="Verdana" FontSize="10" FontStretch="ExtraExpanded" Cursor="Help"></Button>
        <Button Name="Button3" Grid.Row="2" Width="150" Height="30" Visibility="Collapsed"></Button>
        <Button Name="Button4" Grid.Row="3" Width="150" Height="30" Visibility="Visible" Content="Ягон Дон" FontFamily="Times New Roman" FontSize="20" FontStretch="Condensed" FontStyle="Oblique" Cursor="Hand" Click="Button4_Click"></Button>
    </Grid>
</Window>
